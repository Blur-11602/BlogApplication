@model List<BlogApplication.Models.BlogPost>

@{
    ViewBag.Title = "Recent Posts";
}



<div class="row">
    <div class="card-columns">
        @foreach (var post in Model)
        {
            <div class="col-md-12">
                <div class="card my-3 mx-1">
                    <img class="card-img-top" src="https://cdn1.medicalnewstoday.com/content/images/articles/322/322868/golden-retriever-puppy.jpg" alt="Image" width="100%">
                    <div class="card-body">
                        <h2><font size="4" face="georgia">@post.Title</font></h2>
                        <p>
                            <font size="2" face="verdana">@post.Body.Substring(0, Math.Min(post.Body.Length, 200))@if (post.Body.Length > 200)
                                                                                                                  {<span>&hellip;</span>}
                            </font></p>
                        @Html.ActionLink("Read More...", "Details", "Blog", new {@blogId = post.Id}, new {@class = "btn btn-primary"})
                    </div>
                </div>
            </div>
        }
    </div>
</div>
