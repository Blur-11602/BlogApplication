@model BlogApplication.Models.BlogPost

@{
    ViewBag.Title = "Details";
}
<div class="post-container">
    <h2 class="text-center" style="font-weight: bolder; font-variant: small-caps"><font size="5" face="georgia">@Model.Title</font></h2>
    <p><font size="3" face="verdana">@Model.Body</font></p>
</div>


<div class="container pb-cmnt-container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-info">
                <div class="card-body">
                    <form class="col-md-12">
                        <div class="form-group">
                            <textarea placeholder="Write your comment here!" class="form-control pb-cmnt-textarea col-md-12"></textarea>
                        </div>
                        <div class="btn-group col-md-6 offset-md-3">
                            <button class="btn btn-primary" type="button">Comment on Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .pb-cmnt-container {
        font-family: Lato;
        margin-top: 200px;
    }

    .pb-cmnt-textarea {
        resize: none;
        padding: 20px;
        height: 130px;
        border: 1px solid #F2F2F2;
    }


</style>
