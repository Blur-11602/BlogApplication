@model BlogApplication.Models.BlogPostViewModel

@{
    ViewBag.Title = "Details";
}
<div class="post-container">
    <h2 class="text-center" style="font-weight: bolder; font-variant: small-caps"><font size="5" face="georgia">@Model.Post.Title</font></h2>
    <p><font size="3" face="verdana">@Model.Post.Body</font></p>
</div>


<div class="container pb-cmnt-container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-info">
                <div class="card-body">
                    <form class="comment-form col-md-12">
                        <div class="form-group">
                            <textarea placeholder="Write your comment here!" class="form-control pb-cmnt-textarea col-md-12"></textarea>
                        </div>
                        <div class="btn-group col-md-6 offset-md-3">
                            <button class="btn btn-primary" type="button">Post Comment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container comment-container mt-5">
    <div class="row">
        @foreach (var comment in Model.Comments)
        {
            <div class="col-md-12 user-comment my-1">
                <div class="col-md-12">
                    <p>
                        <b>@Model.UserFullName</b>
                        <small>on @comment.PostedDate.ToShortDateString()</small>
                    </p>
                </div>
                <div class="col-md-12">
                    <p>@comment.Body</p>
                </div>
            </div>
        }
    </div>
</div>